[core]
	editor = nvim
    excludesfile = ~/.config/git/.gitignore_global

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[init]
    defaultBranch = main

[fetch]
	prune = true

[push]
	autoSetupRemote = true

[pull]
	rebase = true

[alias]
    ck = checkout
    # fuzzy-find a branch and check it out
    ckb = !git branch | fzf | cut -c 3- | xargs git checkout
    amend = commit --amend --no-edit
    addexe = add --chmod=+x
	glimpse = show --stat
